pipeline {
    agent any
	tools {
		maven 'mvn_home'
	}
    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'master', credentialsId: 'git_cred', url: 'https://github.com/RamiReddyFullstackDeveloper/maven-web-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Sonar-testing') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Tomcat-deployment') {
            steps {
                sh 'mvn clean'
            }
        }
    }
}
